{
  "ConnectionStrings": {
    "SqlLiteDatabase": "Data Source=LocalDatabase.db",
    "SqlLiteInMemoryDatabase": "Data Source=InMemorySample;Mode=Memory;Cache=Shared"
  },

  "JWT": {
    "Issuer": "exampleIssuer",
    "Audience": "exampleAudience",
    "Keys": {
      "Access": "exampleAccessSecret",
      "Refresh": "exampleRefreshSecret"
    },
    "Expiry": {
      "Access": "30", // access token expiry duration in minutes
      "Refresh": "30" // refresh token expiry duration in days
    },
    "Cookie": {
      "AccessHeader": "X-AccessToken",
      "ExpiryHeader": "AccessCookieExpired"
    }
  },

  "OAuthUrl": "/api/oauth/login/provider",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      //{
      //  "Name": "With",
      //  "Args": { "policy": "Sample.CustomPolicy, Sample" }
      //},
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
    //"Properties": {
    //  "Application": "Sample"
    //}
  },


  "AllowedHosts": "*"
}
